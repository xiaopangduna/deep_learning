{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake-configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "yolov5_seg_demo",
                "--",
                "-j"
            ],
            "group": { "kind": "build", "isDefault": true },
            "dependsOn": "cmake-configure",
            "problemMatcher": ["$gcc"]
        }
    ]
}