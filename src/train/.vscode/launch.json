        // 直接调试Python文件
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,  // 允许调试第三方库
            "subProcess": false
        },
        // 调试pytest测试用例
        {
            "name": "Python: pytest test file",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}"  // 调试当前打开的测试文件
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        // 调试单个测试函数
        {
            "name": "Python: pytest test function",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": [
                "${file}::${selectedText}"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}